{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Hayyans Media Downloader (HMD)",
  "version": "0.1.0",
  "identifier": "com.hayyan.hmd",
  "build": {
    "frontendDist": "ui"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "HMD Hayyans Media Downloader",
        "width": 1000,
        "height": 650,
        "minWidth": 800,
        "minHeight": 500,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "appimage", "rpm", "dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
  }
}
